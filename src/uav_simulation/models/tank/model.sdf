<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="tank">
    <static>false</static>
    
    <!-- Main body -->
    <link name="chassis">
      <pose>0 0 0.3 0 0 0</pose>
      <inertial>
        <mass>1000</mass>
        <inertia>
          <ixx>100</ixx>
          <iyy>200</iyy>
          <izz>100</izz>
        </inertia>
      </inertial>
      
      <collision name="collision">
        <geometry>
          <box>
            <size>4 2.5 1</size>
          </box>
        </geometry>
      </collision>
      
      <visual name="visual">
        <geometry>
          <box>
            <size>4 2.5 1</size>
          </box>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/DarkGrey</name>
          </script>
        </material>
      </visual>
    </link>

    <!-- Turret -->
    <link name="turret">
      <pose>0 0 1.0 0 0 0</pose>
      <inertial>
        <mass>200</mass>
        <inertia>
          <ixx>10</ixx>
          <iyy>10</iyy>
          <izz>10</izz>
        </inertia>
      </inertial>
      
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.8</radius>
            <length>0.6</length>
          </cylinder>
        </geometry>
      </collision>
      
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.8</radius>
            <length>0.6</length>
          </cylinder>
        </geometry>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Grey</name>
          </script>
        </material>
      </visual>
    </link>

    <!-- Cannon -->
    <link name="cannon">
      <pose>1.5 0 1.0 0 0 0</pose>
      <inertial>
        <mass>50</mass>
        <inertia>
          <ixx>1</ixx>
          <iyy>1</iyy>
          <izz>1</izz>
        </inertia>
      </inertial>
      
      <collision name="collision">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>2</length>
          </cylinder>
        </geometry>
        <pose>1 0 0 0 1.5708 0</pose>
      </collision>
      
      <visual name="visual">
        <geometry>
          <cylinder>
            <radius>0.15</radius>
            <length>2</length>
          </cylinder>
        </geometry>
        <pose>1 0 0 0 1.5708 0</pose>
        <material>
          <script>
            <uri>file://media/materials/scripts/gazebo.material</uri>
            <name>Gazebo/Black</name>
          </script>
        </material>
      </visual>
    </link>

    <!-- Joints -->
    <joint name="turret_joint" type="revolute">
      <parent>chassis</parent>
      <child>turret</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-3.14159</lower>
          <upper>3.14159</upper>
        </limit>
      </axis>
    </joint>

    <joint name="cannon_joint" type="fixed">
      <parent>turret</parent>
      <child>cannon</child>
    </joint>

    <!-- Plugin for ground truth pose -->
    <plugin name="ground_truth" filename="libgazebo_ros_p3d.so">
      <alwaysOn>true</alwaysOn>
      <updateRate>50.0</updateRate>
      <bodyName>chassis</bodyName>
      <topicName>/tank/ground_truth/pose</topicName>
      <gaussianNoise>0.0</gaussianNoise>
      <frameName>world</frameName>
      <xyzOffsets>0 0 0</xyzOffsets>
      <rpyOffsets>0 0 0</rpyOffsets>
    </plugin>

  </model>
</sdf>

